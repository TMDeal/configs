                focused_workspace  $BAR_BACKGROUND $BAR_BACKGROUND $BAR_TEXT
                active_workspace   $BAR_BACKGROUND $BAR_BACKGROUND $BAR_TEXT
                inactive_workspace $BAR_BACKGROUND $BAR_BACKGROUND $BAR_INACTIVE
                urgent_workspace   $BAR_BACKGROUND $BAR_BACKGROUND $URGENT
                binding_mode       $BAR_BACKGROUND $BAR_BACKGROUND $URGENT
        }
}
